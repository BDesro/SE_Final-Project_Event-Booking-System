<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AdminController">
   <children>
      <AnchorPane prefHeight="720.0" prefWidth="1280.0">
         <children>
            <Button layoutX="50.0" layoutY="20.0" mnemonicParsing="false" onAction="#createEvent" prefHeight="30.0" prefWidth="93.0" text="Create Event" />
            <TextArea fx:id="nameTextArea" layoutX="783.0" layoutY="25.0" prefHeight="45.0" prefWidth="200.0" promptText="Enter Event Description..." />
            <Button layoutX="200.0" layoutY="120.0" mnemonicParsing="false" onAction="#nextEvent" text="Next Event" />
            <TextArea fx:id="descriptionTextArea" layoutX="532.0" layoutY="25.0" prefHeight="45.0" prefWidth="200.0" promptText="Enter Event Name..." />
            <DatePicker fx:id="datePicker" layoutX="1031.0" layoutY="25.0" promptText="Select A Date" />
            <Button layoutX="50.0" layoutY="70.0" mnemonicParsing="false" onAction="#publishEvent" text="Publish Event" />
            <Button layoutX="1000.0" layoutY="670.0" mnemonicParsing="false" onAction="#goToLogin" text="Temp return to Login Screen" />
            <Button layoutX="50.0" layoutY="120.0" mnemonicParsing="false" onAction="#deleteEvent" text="Delete Event" />
            <Button layoutX="200.0" layoutY="70.0" mnemonicParsing="false" onAction="#editEvent" text="Edit Event" />
            <Button layoutX="200.0" layoutY="20.0" mnemonicParsing="false" onAction="#pullEvents" text="Pull Events" />
            <GridPane alignment="TOP_CENTER" layoutX="12.0" layoutY="198.0" prefHeight="500.0" prefWidth="500.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="EVENT NAME :" GridPane.rowIndex="1">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <Label fx:id="name" text="Name Label" GridPane.rowIndex="2">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="EVENT DESCRIPTION :" GridPane.rowIndex="3">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <Label fx:id="description" text="Description Label" GridPane.rowIndex="4">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="date" text="Date Label" GridPane.rowIndex="6">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="EVENT DATE:" textAlignment="CENTER" GridPane.rowIndex="5">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="EVENT PUBLICITY :" GridPane.rowIndex="7">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <Label fx:id="publicity" text="Public Label" GridPane.rowIndex="8">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="CURRENT EVENT" translateX="50.0">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Text>
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </children>
</VBox>
